clc;
addpath('../samples/super_mario_bros/');
imageBasePath = 'super_mario_bros_';
imagePath = strcat(imageBasePath, '.png');

colorFrequence = getColorsByFrequence(imagePath);

for i = 1 : size(colorFrequence, 1)
    image = selectColor(imagePath, colorFrequence(i, :));
    imwrite(image, strcat('../output/', 'layer_', imageBasePath, num2str(i), '.png'));
end

